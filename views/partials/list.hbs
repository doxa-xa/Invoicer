{{#each data}}
<div>
    <ul>
        <li>Company: {{this.company}}</li>
        <li>UIC: {{this.uic}}</li>
        <li>VAT: {{this.vat}}</li>
        <li>Address: {{this.address}}</li>
        <li>Contact: {{this.contact}}</li>
        <li>E-mail: {{this.email}}</li>
    </ul>
<input type="text" style="display: none;" value={{this.uic}}>
    <a href="/issue">Issue an invoice</a>
</div>
{{/each}}